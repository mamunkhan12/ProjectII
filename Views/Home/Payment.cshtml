@model ProjectII.Models.Payment

@{
    ViewBag.Title = "Payment";
}

<h2>Payment</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Payment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           
            <div class="col-md-10">
                <label for="FullName">FullName</label>
                <input type="text" id="FullName" name="FullName" class="form-control" value="@Session["FullName"]" readonly />
            </div>
        </div>
        
     
        



        <div class="form-group">
           
            <div class="col-md-10">
                <label for="Phone">Phone</label>
                <input type="decimal" id="Phone" name="Phone" class="form-control" value="@Session["Phone"]" readonly/>
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-10">
                <label for="Email">Email</label>
                <input type="tel" id="Email"  name="Email"class="form-control" value="@Session["Email"]" readonly/>
            </div>
        </div>
        <div class="form-group">
           
            <div class="col-md-10">
                <label for="Account">Account Number</label>
                <input type="text" id="Account" name="" class="form-control"required/>
            </div>
        </div>
        <div class="form-group">
           
            <div class="col-md-10">
                <label for="Amount">Amount</label>
                <input type="text" id="Amount" name="Amount" class="form-control" value=" "required/>
            </div>
        </div>
        <div class="form-group">
           
            <div class="col-md-10">
                <label for="Password">Password</label>
                <input type="password" id="Password" name="Password" class="form-control"required/>
            </div>
        </div>

    

        <div class="form-group">
           
            <div class="col-md-10">
               
                <input type="hidden" id="Address" name="Address"class="form-control" value="@Session["Address"]" readonly/>
            </div>
        </div>
        <div class="form-group">
           
            <div class="col-md-10">
                
                <input type="hidden" id="Date" name="Date" class="form-control" value=" @DateTime.Now" readonly/>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-md-10">
                <input type="submit" value="Payment" class="form-control" style="background-color: #4B0082; color: white;" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
